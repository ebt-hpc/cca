__author__ = 'Masatomo Hashimoto <m.hashimoto@riken.jp>'

import os
import sys
import requests
import json
import simplejson

from common import OUTLINE_DIR, DEFAULT_USER, BASE_URL

###

TEMPL = '''user: %(user)s
proj: %(proj)s
ver:  %(ver)s
'''

path_list = []

def render(data, lv='', out=sys.stdout):

    indent = lv

    if lv != '':
        indent = lv[:-1] + '+'

    cat = data.get('cat', '')

    if data.has_key('code'):
        if cat.endswith('-block'):
            out.write('%s<%s>\n' % (indent, cat))
        else:
            out.write('%s%s\n' % (indent, data['code']))

    elif cat == 'file':
        loci = data['loc']
        try:
            loc = path_list[loci]
        except:
            loc = '[%d]' % loci

        out.write('%s\n' % loc)

    opened = False
    if data.has_key('state'):
        if data['state'].get('opened', False):
            opened = True

    if opened and data.has_key('children'):
        children = data['children']
        nc = len(children)
        if nc == 0:
            pass
        elif nc == 1:
            render(children[0], lv=(lv+' '), out=out)
        else:
            li = nc - 1
            for i in range(li):
                render(children[i], lv=(lv+'|'), out=out)
            render(children[li], lv=(lv+' '), out=out)

###

import cgi
import cgitb
cgitb.enable()

form = cgi.FieldStorage()

user = form.getvalue('user', DEFAULT_USER)
proj = form.getvalue('proj', None)
ver  = form.getvalue('ver', None)
path = form.getvalue('path', None)
fid  = form.getvalue('fid', None)

content = 'FAILED'

err = False

#host = os.environ['HTTP_HOST']
script = '/'.join(os.environ['SCRIPT_NAME'].split('/')[:-1]) + '/data'

json_url = 'http://localhost%s' % script
json_url_params = None

if proj and ver:
    json_url_params = { 'user' : user,
                        'proj' : proj,
                        'ver'  : ver,
                        'path' : path,
                        'fid'  : fid,
    }

    proj_path = os.path.join(OUTLINE_DIR, proj)

    ver_path = os.path.join(proj_path, 'v', ver)

    try:
        with open(os.path.join(ver_path, 'path_list.json'), 'r') as plf:
            path_list = simplejson.load(plf)

    except Exception, e:
        pass

    try:
        with open(os.path.join(proj_path, 'index.json'), 'r') as pif:

            pi_tbl = simplejson.load(pif)

            with open(os.path.join(ver_path, 'index.json'), 'r') as vif:
                vi_tbl = simplejson.load(vif)

                content = TEMPL % {
                    'user' : user,
                    'proj' : proj,
                    'ver'  : ver,
                    'base_url' : BASE_URL,
                    'src'  : path,
                    'url'  : json_url,

                    'vid' : '"'+vi_tbl.get('vid', ver)+'"',

                    'ver_kind'  : '"'+pi_tbl.get('ver_kind', 'REL')+'"',
                    'hash_algo' : '"'+pi_tbl.get('hash_algo', 'MD5')+'"',
                    'hash_meth' : '"'+pi_tbl.get('hash_meth', 'NORMAL')+'"',
                }

    except Exception, e:
            content = str(e)
            err = True

if not err and json_url_params:
    r = requests.get(json_url, params=json_url_params)
    tree_data = r.json()
    sys.stdout.write('Content-Type: text/plain')
    sys.stdout.write('\n\n')
    sys.stdout.write(content)
    sys.stdout.write('\n')
    render(tree_data)
